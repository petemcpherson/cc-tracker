{
    "manifest_version": 3,
    "name": "Cookie Clicker CPM Calculator",
    "version": "1.0",
    "description": "Calculates cookies per minute (CPM) in Cookie Clicker.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://orteil.dashnet.org/cookieclicker/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "inject.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}